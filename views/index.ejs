<html lang="en">
	<%- include("./partials/head.ejs") %>

	<body>
		<%- include("./partials/nav.ejs") %>

		<main role="main" class="container">
			<div class="my-3 p-3 bg-white rounded shadow-sm">
				<h6 class="border-bottom border-gray pb-2 mb-0">Posts</h6>

				<% if (posts.length > 0) { %> <% posts.forEach(post => { %>
				<!-- Creates div for every post -->
				<div class="media text-muted pt-3">
					<!-- Blu rextangle -->
					<svg
						class="bd-placeholder-img mr-2 rounded"
						width="32"
						height="32"
						xmlns="http://www.w3.org/2000/svg"
						preserveAspectRatio="xMidYMid slice"
						focusable="false"
						role="img"
						aria-label="Placeholder: 32x32"
					>
						<rect width="100%" height="100%" fill="#007bff"></rect>
						<text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text>
					</svg>
					<p
						class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray"
					>
						<!-- Post title -->
						<strong class="d-block text-gray-dark"><%= post.body %></strong>
						<!-- Post body -->
						<%= post.body %>
					</p>
				</div>
				<!-- Closing for each function and opening else statement -->
				<% }) %> <% } else { %>
				<!-- Displays when there are no posts -->
				<p>There are no posts to display...</p>
				<% } %>
			</div>
		</main>

		<%- include("./partials/footer.ejs") %>
	</body>
</html>
